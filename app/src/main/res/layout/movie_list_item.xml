<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp">

    <ImageView
        android:id="@+id/poster_thumbnail"
        android:layout_width="54dp"
        android:layout_height="90dp"
        android:background="@color/blue"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moana"
        android:textColor="@color/textDark"
        android:textSize="16sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/poster_thumbnail"
        app:layout_constraintLeft_toRightOf="@+id/poster_thumbnail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(2017)"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="@id/movie_title"
        app:layout_constraintTop_toBottomOf="@id/movie_title"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/poster_thumbnail"/>


</android.support.constraint.ConstraintLayout>
